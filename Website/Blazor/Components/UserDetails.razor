
<!-- User information: Full name + the account balance
    +Buttons for making a new transfer -->


<div class="box">
    <div class="box-info">
        <div>
            <p class="balance">@Balance DKK</p>
            <p>@accountType</p>
        </div>
        <select @onchange="OnAccountTypeChanged">
            <option value="personal">Personal Account</option>
            <option value="savings">Savings Account</option>
            <option value="business">Business Account</option>
        </select>
    </div>
    <div class="buttons-content">
        <div class="box-buttons">
            <button class="userDetailsButton" @onclick="NewTransfer">New Transfer</button>
        </div>
        <div class="box-buttons">
            <button class="userDetailsButton" @onclick="Deposit">Deposit</button>
        </div>
    </div>
</div>



@code {
    
    [Parameter]public string? Balance { get; set; }

   
    [Inject] private NavigationManager Navigation { get; set; }
    
    private string accountType = "Personal Account"; // Default account type

    private void NewTransfer() => Navigation.NavigateTo("/transfer");
    private void Deposit() => Navigation.NavigateTo("/deposit");

    private void OnAccountTypeChanged(ChangeEventArgs e)
    {
        var selectedType = e.Value?.ToString();
        switch (selectedType)
        {
            case "personal":
                accountType = "Personal Account";
                break;
            case "savings":
                accountType = "Savings Account";
                break;
            case "business":
                accountType = "Business Account";
                break;
        }
    }
}